<!DOCTYPE html5>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>Create Person</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="bootstrap/dist/css/bootstrap.min.css">
    <div class=" page-header" style="text-align: center; color: slategrey">
        <h1><a style="text-decoration: none" href="/"><%= title%></a></h1>
    </div>
</head>

<body ng-app="express_test.create_person">
<div class="content" ng-controller="CreateController">
    <div class="create_form" style="width:400px; margin: 0 auto">
        <h1>Create CallPerson</h1>

        <div class="required-field-block">
            <input type="text" placeholder="First Name" ng-model="newPerson.firstname" class="form-control">

            <div class="required-icon">
                <div class="text">*</div>
            </div>
        </div>

        <div class="required-field-block">
            <input type="text" ng-model="newPerson.lastname" placeholder="Last Name" class="form-control">

            <div class="required-icon">
                <div class="text">*</div>
            </div>
        </div>
        <input type="submit" value="Save" ng-click="save()" class="active btn btn-primary">

        <p ng-repeat="name in errors" class="alert alert-danger"><strong>{{ name }}</strong></p>

    </div>
</div>
<script src="angular/angular.js"></script>
<script src="angular-resource/angular-resource.js"></script>
<script src="javascripts/create_person_controller.js"></script>
<script src="jquery/dist/jquery.min.js"></script>
<script src="bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>